<body>

   {{#unless loggedUser.user}}
   <div class="sidebar close">
      <a href="/">
         <div class="logo-details">
            <i class='bx bxs-car bx-tada' style='color:#080808'></i>

            <span class="logo_name" style='color:#080808'>{{appTitle}}</span>
         </div>
      </a>
      <ul class="nav-links">

         {{!-- START // SIGN UP - LOG IN --}}
         <li>
            <div class="iocn-link">
               <a href="/">
                  <i class='bx bx-log-in-circle'></i>
                  <span class="link_name">Start</span>
               </a>
               <i class='bx bxs-chevron-down arrow'></i>
            </div>
            <ul class="sub-menu">
               <li><a href="/signUp">Sign up</a></li>
               <li><a href="/logIn">Log in</a></li>
            </ul>
         </li>


         {{!-- SEARCH TRIP --}}
         <li>
            <div class="iocn-link">
               <a href="/">
                  <i class='bx bx-search-alt'></i>
                  <span class="link_name">Search trip</span>
               </a>
            </div>
            <ul class="sub-menu">
               <li><a href="/">Search trip</a></li>
            </ul>
         </li>
      </ul>

   </div>
   {{/unless}}


   {{#if loggedUser.user}}
   <div class="sidebar close">
      <a href="/">
         <div class="logo-details">
            <i class='bx bxs-car bx-tada' style='color:#080808'></i>

            <span class="logo_name" style='color:#080808'>{{appTitle}}</span>
         </div>
      </a>
      <ul class="nav-links">

         {{!-- SEARCH TRIP --}}
         <li>
            <div class="iocn-link">
               <a href="/">
                  <i class='bx bx-search-alt'></i>
                  <span class="link_name">Search trip</span>
               </a>
            </div>
            <ul class="sub-menu">
               <li><a href="/">Search trip</a></li>
            </ul>
         </li>


         {{!-- CREATE TRIP --}}
         {{#if loggedUser.isDriverOrAdmin}}
         <li>
            <div class="iocn-link">
               <a href="/createTrip">
                  <i class='bx bx-plus'></i>
                  <span class="link_name">Create trip</span>
               </a>
            </div>
            <ul class="sub-menu">
               <li><a href="/createTrip"> Create trip</a></li>
            </ul>
         </li>
         {{/if}}

         {{!-- CREATE REVIEW--}}
         <li>
            <div class="iocn-link">
               <a href="/createReview">
                  <i class='bx bx-log-out-circle'></i>
                  <span class="link_name">create review</span>
               </a>
            </div>
            <ul class="sub-menu">
               <li><a href="/createReview">create review</a></li>
            </ul>
         </li>

         {{!-- LOG OUT --}}
         <li>
            <div class="iocn-link">
               <a href="/logOut">
                  <i class='bx bx-log-out-circle'></i>
                  <span class="link_name">Log out</span>
               </a>
            </div>
            <ul class="sub-menu">
               <li><a href="/logOut">Log out</a></li>
            </ul>
         </li>


         {{!-- MY PROFILE --}}
         <li>
            <div class="profile-details">
               <a href="/myProfile">
                  <div class="profile-content">
                     <img src="{{loggedUser.image}}" alt="profileImg">
                  </div>
                  <div class="name-job">
                     <div class="profile_name">Â¡Bienvenido, {{ loggedUser.name}}!</div>
                     <div class="job">{{loggedUser.role}}</div>
                  </div>
                  <i class='bx bx-log-out'></i>
