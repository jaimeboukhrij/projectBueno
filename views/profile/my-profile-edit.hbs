<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>EDIT PROFILE</h1>
            <hr>

            <form action="/myProfile/{{user.id}}/edit" method="POST">
                <div class="mb-3 mt-5">
                    <label for="username" class="form-label">New username</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
                </div>

                <div class="mb-3">
                    <label for="name" class="form-label">New name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{user.name}}">
                </div>

                <div class="mb-3 ">
                    <label for="secondName" class="form-label">New Second name</label>
                    <input type="text" class="form-control" id="secondName" name="secondName"
                        value="{{user.secondName}}">
                </div>

                <div class="mb-3 ">
                    <label for="email" class="form-label">New Email </label>
                    <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                </div>

                <div class="mb-3 ">
                    <label for="phoneNumber" class="form-label">New phoneNumber </label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                        value="{{user.phoneNumber}}">
                </div>


                <div class="mb-3">
                    <p>Choose yours news Aptitudes</p>

                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <div>
                                <label for="chattiness">Chattiness</label>
                                <select name="aptitudes" id="Chattiness">
                                    <option value="I’m a chatterbox!">I’m a chatterbox!</option>
                                    <option value="I’m chatty when I feel comfortable">I’m chatty when I feel
                                        comfortable
                                    </option>
                                    <option value="I’m the quiet type">I’m the quiet type</option>
                                </select>
                            </div>
                            <div>
                                <label for="music">Music</label>
                                <select name="aptitudes" id="music">
                                    <option value="It’s all about the playlist!">It’s all about the playlist!
                                    </option>
                                    <option value="I’ll jam depending on the mood">I’ll jam depending on the mood
                                    </option>
                                    <option value="Silence is golden">Silence is golden</option>
                                </select>
                            </div>
                            <div>
                                <label for="smoke">Smoke</label>
                                <select name="aptitudes" id="smoke">
                                    <option value="I’m fine with smoking">I’m fine with smoking</option>
                                    <option value="Cigarette breaks outside the car are ok">Cigarette breaks outside
                                        the
                                        car are ok
                                    </option>
                                    <option value="Please, no smoking in the car">Please, no smoking in the car
                                    </option>
                                </select>
                            </div>
                            <div>
                                <label for="pets">Pets</label>
                                <select name="aptitudes" id="pets">
                                    <option value="I love pets.Woof!">I love pets.Woof!</option>
                                    <option value="I’ll travel with pets depending on the animal">I’ll travel with
                                        pets
                                        depending on
                                        the animal</option>
                                    <option value="Sorry, not a pet person">Sorry, not a pet person</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>





                <button type="submit" class="btn btn-dark">Update profile</button>
            </form>

        </div>
    </div>



</div>