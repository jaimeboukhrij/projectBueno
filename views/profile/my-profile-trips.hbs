<div class="principal">
    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">

                        {{!-- MY PROFILE TAB --}}
                        <li class="nav-item">
                            <a class="nav-link " aria-current="true" href="/myProfile">My profile</a>
                        </li>
                        {{!-- MY TRIPS TAB --}}
                        <li class="nav-item">
                            <a class="nav-link active" href="/myProfile/MyTrips">My trips</a>
                        </li>
                        {{!-- MY REVIEWS TAB --}}
                        <li class="nav-item">
                            <a class="nav-link" href="/myProfile/myReviews/">My reviews</a>
                        </li>
                    </ul>
                </div>
                <div class="row mt-5 mb-5">

                    <div class="card-body">
                        {{#each trips}}
                        <input type="text" value="{{arrivalDate}}" id="rating" hidden>
                        <div class="row">
                            <div class="col-6">
                                <li class="trip-item">
                                    <h4> {{destination.name}} </h4>
                                    <p><span class="label">Origen:</span> {{origin.name}}</p>
                                    <button><a
                                            href="/seachTrip/{{departureDay}}/{{origin.name}}/{{destination.name}}/{{origin.id}}/{{destination.id}}/{{_id}}/details">Detail</a></button>


                            </div>

                            {{/each}}


                        </div>
                    </div>
                </div>
            </div>


            <script src="/../js/bottoms.js">
            </script>