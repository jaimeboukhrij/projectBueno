<div class="principal">
    <div class="container">

        <div class="row">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">

                        {{!-- MY PROFILE TAB --}}
                        <li class="nav-item">
                            <a class="nav-link" aria-current="true" href="/myProfile">My profile</a>
                        </li>
                        {{!-- MY TRIPS TAB --}}
                        <li class="nav-item">
                            <a class="nav-link" href="/myProfile/MyTrips">My trips</a>
                        </li>
                        {{!-- MY REVIEWS TAB --}}
                        <li class="nav-item">
                            <a class="nav-link active" href="/myProfile/myReviews/">My reviews</a>
                        </li>
                    </ul>
                </div>

                {{!-- CONTENIDO DE: MY PROFILE / MY TRIPS / MY REVIEWS --}}
                <div class="row mt-5 mb-5">

                    {{#each reviews}}
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <img src="{{owner.imageUrl}}" alt="" class="img-width-50">
                                </div>

                                <div class="col-8">
                                    <p id="resultadoRating"></p>
                                    <input type="text" value="{{rating}}" id="rating" hidden>
                                    <p class="card-text">{{text}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
    </div>
</div>



<script src="../../js/ratin.js">

</script>
</body>

</html>