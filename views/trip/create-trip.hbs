<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create trip</h1>
            <hr>
            <form action="/createTrip" method="POST">

                <div class="mb-3">
                    <label for="origin" class="form-label">Origin:</label>
                    <input type="text" class="form-control" id="origin" name="origin">
                </div>


                <div class="mb-3">
                    <label for="destination" class="form-label">Destination</label>
                    <input type="text" class="form-control" id="destination" name="destination">
                </div>


                <div class="mb-3">
                    <div class="form-group">
                        <label for="departureDate">departureDate</label>
                        <input type="date" class="form-control" id="date" name="departureDate">
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-group">
                        <label for="arrivalDate">arrivalDate</label>
                        <input type="date" class="form-control" id="date" name="arrivalDate">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="text" class="form-control" id="price" name="price">
                </div>

                {{!-- el driver tiene que ser un input camuflado --}}
                <div class="mb-3">
                    <label for="driver" class="form-label">Driver:</label>
                    <input type="text" class="form-control" id="price" name="driver">
                </div>

                <div class="mb-3">
                    <label for="carModel" class="form-label">Car model</label>
                    <input type="text" class="form-control" id="carModel" name="carModel">
                </div>

                <div class="mb-3">
                    <label for="carTuition" class="form-label">Car Tuition</label>
                    <input type="text" class="form-control" id="carTuition" name="carTuition">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create trip</button>
                </div>

            </form>
        </div>
    </div>
</div>