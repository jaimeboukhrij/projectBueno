<div class="principal">


    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 90vh;">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-body">

                        <form action="/signUp" method="POST" enctype="multipart/form-data">

                            <div class="row mb-4">
                                <div class="col-6">
                                    <input type="email" class="form-control" placeholder="email" id="email"
                                        name="email">
                                </div>

                                <div class="col-6">
                                    <input type="password" class="form-control" id="password" placeholder="password"
                                        name="password">
                                </div>
                            </div>



                            <div class="input-group mb-4">
                                <span class="input-group-text">First and last name</span>
                                <input type="text" aria-label="First name" class="form-control" name="name">
                                <input type="text" aria-label="Last name" class="form-control" name="secondName">
                            </div>


                            <div class="col mb-4">
                                <label for="formFile" class="form-label"></label>
                                <input type="file" class="form-control" id="formFile" name="imageUrl" />
                            </div>


                            <div class="row">
                                <div class="col-5">
                                    <input type="text" class="form-control" placeholder="ID CARD" id="dni" name="dni">
                                </div>

                                <div class="col-5">
                                    <input type="text" class="form-control" id="phoneNumber" placeholder="Phone number"
                                        name="phoneNumber">
                                </div>


                                <div class="col-2">
                                    <input type="text" class="form-control" placeholder="Role" id="role" name="role">
                                </div>

                            </div>



                            <div class="row justify-content-center mt-5 mb-5 text-center">

                                <h3>choose your preferences</h3>
                                <div class="col-8 mt-2">

                                    <select class="form-select" aria-label="Default select example" name="aptitudes">
                                        <option selected>Chattiness</option>
                                        <option value="I’m a chatterbox!">I’m a chatterbox!</option>
                                        <option value="I’m chatty when I feel comfortable">I’m chatty when I feel
                                            comfortable</option>
                                        <option value="I’m the quiet type">I’m the quiet type</option>
                                    </select>
                                </div>

                                <div class="col-8 mt-2">
                                    <select class="form-select" aria-label="Default select example" name="aptitudes">
                                        <option selected>Music</option>
                                        <option value="It’s all about the playlist!">It’s all about the playlist!
                                        </option>
                                        <option value="I’ll jam depending on the mood">I’ll jam depending on the
                                            mood
                                        </option>
                                        <option value="Silence is golden">Silence is golden</option>
                                    </select>
                                </div>

                                <div class="col-8 mt-2">
                                    <select class="form-select" aria-label="Default select example" name="aptitudes">
                                        <option selected>Smoke</option>
                                        <option value="I’m fine with smoking">I’m fine with smoking</option>
                                        <option value="Cigarette breaks outside the car are ok">Cigarette breaks
                                            outside the
                                            car are ok
                                        </option>
                                        <option value="Please, no smoking in the car">Please, no smoking in the car
                                        </option>
                                    </select>
                                </div>

                                <div class="col-8 mt-2">

                                    <select class="form-select" aria-label="Default select example" name="aptitudes">
                                        <option selected>Pets</option>
                                        <option value="I love pets.Woof!">I love pets.Woof!</option>
                                        <option value="I’ll travel with pets depending on the animal">I’ll travel
                                            with pets
                                            depending on the animal
                                        </option>
                                        <option value="Sorry, not a pet person">Sorry, not a pet person</option>
                                    </select>
                                </div>



                            </div>


                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark">Registrate</button>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>