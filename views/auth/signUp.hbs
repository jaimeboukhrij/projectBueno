<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Registro</h1>
            <hr>
            <form action="/signUp" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="username" class="form-label">Nombre de usuario/nick</label>
                    <input type="text" class="form-control" id="username" name="username">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="secondName" class="form-label">Second Name</label>
                        <input type="text" class="form-control" id="secondName" name="secondName">
                    </div>

                    <div class="mb-3">
                        <input type="file" name="imageUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <input type="text" class="form-control" id="role" name="role">
                    </div>
                    <div class="mb-3">
                        <label for="dni" class="form-label">ID</label>
                        <input type="text" class="form-control" id="dni" name="dni">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="username" name="email">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="number" class="form-control" id="phoneNumber" name="phoneNumber">
                    </div>

                    <div class="mb-3">
                        <p>Choose yours Aptitudes</p>

                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <div>
                                    <label for="Chattiness">Chattiness</label>
                                    <select name="aptitudes" id="Chattiness">
                                        <option value="I’m a chatterbox!">I’m a chatterbox!</option>
                                        <option value="I’m chatty when I feel comfortable">I’m chatty when I feel
                                            comfortable
                                        </option>
                                        <option value="I’m the quiet type">I’m the quiet type</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="music">Music</label>
                                    <select name="aptitudes" id="music">
                                        <option value="It’s all about the playlist!">It’s all about the playlist!
                                        </option>
                                        <option value="I’ll jam depending on the mood">I’ll jam depending on the mood
                                        </option>
                                        <option value="Silence is golden">Silence is golden</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="smoke">Smoke</label>
                                    <select name="aptitudes" id="smoke">
                                        <option value="I’m fine with smoking">I’m fine with smoking</option>
                                        <option value="Cigarette breaks outside the car are ok">Cigarette breaks outside
                                            the
                                            car are ok
                                        </option>
                                        <option value="Please, no smoking in the car">Please, no smoking in the car
                                        </option>
                                    </select>
                                </div>
                                <div>
                                    <label for="pets">Pets</label>
                                    <select name="aptitudes" id="pets">
                                        <option value="I love pets.Woof!">I love pets.Woof!</option>
                                        <option value="I’ll travel with pets depending on the animal">I’ll travel with
                                            pets
                                            depending on
                                            the animal</option>
                                        <option value="Sorry, not a pet person">Sorry, not a pet person</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Registrate</button>
                    </div>
            </form>
        </div>
    </div>
</div>